{% block html_head_container %}

  {% include 'html-header.twig' %}
  {% block head %}{% endblock %}
</head>{% endblock %}<body class="{{body_class}}" data-template="base.twig">
<div class="layout-main">
  <header class="header">
    <a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
    {% block header %}
      <div class="wrapper">
        <h1 class="hdr-logo" role="banner">
          <a class="hdr-logo-link" href="{{site.url}}" rel="home">
            <img alt="" class="logo" src="/wp-content/themes/offguardgames/images/offguardlogo.png">
          </a>
        </h1>

        <nav class="nav-primary" id="nav-primary" role="navigation">
          {% include "menu.twig" with {'menu': primaryMenu.get_items} %}
        </nav>

        <a class="mobile-menu" href="#"><img alt="" src="/wp-content/themes/offguardgames/images/bars.svg"></a>
      </div>
      <nav class="nav-secondary" id="nav-secondary" role="navigation">
        {% include "menu.twig" with {'menu': secondaryMenu.get_items} %}
      </nav>
    {% endblock %}
  </header>

  <section class="content-wrapper main max-width-container" id="content" role="main" tabindex="-1">
    <section class="max-width-container__content">
      {% block pageTitle %}
        {% if title %}
          {{ function('yoast_breadcrumb', '<nav id="breadcrumbs" class="main-breadcrumbs">','</nav>', false ) }}
          <h1 class="article-h1">{{title}}</h1>
        {% endif %}
      {% endblock pageTitle %}

      <div class="wrapper {{sidebar_class}}">
        {% block content %}
          Sorry, no content
        {% endblock %}
      </div>
      {% if sidebar %}
        <aside class="layout-sidebar">
          {{sidebar}}
        </aside>
      {% endif %}
    </section>
  </section>

  {% block footer %}
    <footer class="footer" id="footer">
      {% include 'footer.twig' %}
    </footer>
    {{ function('wp_footer') }}
  {% endblock %}
</div>
<script src="/wp-content/themes/offguardgames/scripts/menu.js"></script></body></html>
